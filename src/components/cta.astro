---
import Link from "./ui/link.astro";
import { getEntryBySlug } from "astro:content";

const { data } = await getEntryBySlug("components", "components");
const cta = data.cta;
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">{cta.title}</h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">{cta.description}</p>
  <div class="flex mt-5">
    <Link href={cta.button.href} style={cta.button.style}
      >{cta.button.text}</Link
    >
  </div>
</div>

