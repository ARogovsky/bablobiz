---
import { getEntryBySlug } from "astro:content";
const { align = "center" } = Astro.props;
const { data } = await getEntryBySlug("components", "components");
const sectionhead = data.sectionhead;
---

<div class:list={["mt-16", align === "center" && "text-center"]}>
  <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    <slot name="title">{sectionhead.defaultTitle}</slot>
  </h1>
  <p class="text-lg mt-4 text-slate-600">
    <slot name="desc">{sectionhead.defaultDescription}</slot>
  </p>
</div>

